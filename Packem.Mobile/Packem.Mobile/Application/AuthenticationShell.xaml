<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Packem.Mobile.Application.AuthenticationShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:Packem.Mobile.Modules.Authentications">
    <ShellContent ContentTemplate="{DataTemplate auth:RegisterView}" Route="RegisterViewModel" />
    <ShellContent ContentTemplate="{DataTemplate auth:RegisteredDeviceView}" Route="RegisteredDeviceViewModel" />
    <ShellContent ContentTemplate="{DataTemplate auth:LoginView}" Route="LoginViewModel" />
</Shell>